<Window x:Class="LabyrinthGameCS.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LabyrinthGameCS"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Canvas Name="labyrinth" HorizontalAlignment="Center" VerticalAlignment="Center" Height="434" Width="800">
            <TextBlock Name="debug">Hello world</TextBlock>
        </Canvas>
        <Canvas Name="buttons" HorizontalAlignment="Center" VerticalAlignment="Center" Height="434" Width="800">
            <Button Height="60" Width="60" Name="north" Click="Move" Canvas.Left="370" Canvas.Bottom="70" Content="Go north" Tag="north"></Button>
            <Button Height="60" Width="60" Name="south" Click="Move" Canvas.Left="370" Canvas.Bottom="5" Content="Go south" Tag="south"></Button>
            <Button Height="60" Width="60" Name="east" Click="Move" Canvas.Left="435" Canvas.Bottom="5" Content="Go east" Tag="east"></Button>
            <Button Height="60" Width="60" Name="west" Click="Move" Canvas.Left="305" Canvas.Bottom="5" Content="Go west" Tag="west"></Button>
            <Button Height="60" Width="100" Name="openInv" Click="OpenInv" Canvas.Left="5" Canvas.Bottom="5" Content="Open Inventory"></Button>
        </Canvas>
    </Grid>
</Window>
